{% block mollie_payment_method_settings %}
    <sw-card title="Mollie">
        <template v-if="!isDefaultLanguage">
            <sw-alert variant="info">
                Mollie specific settings are only available in the default language
                <template #actions>
                    <sw-button @click="onClickParentLanguage">
                        Switch to "{{ parentLanguage.name }}"
                    </sw-button>
                </template>
            </sw-alert>
        </template>

        <template v-if="isDefaultLanguage">
            <sw-sales-channel-switch
                :label="$tc('sw-settings.system-config.labelSalesChannelSelect')"
                @change-sales-channel-id="onSalesChannelChanged">
            </sw-sales-channel-switch>

            <sw-inherit-wrapper
                v-model="settings.paymentApi"
                :label="$tc('something.something.label')"
                :hasParent="isNotDefaultSalesChannel"
                :inheritedValue="defaultSettings.paymentApi">
                <template #content="props">
                    <sw-single-select
                        :mapInheritance="props"
                        :options="availablePaymentApis"
                        :value="props.currentValue"
                        :disabled="props.isInherited"
                        :key="props.isInheritField + props.isInherited"
                        @input="props.updateCurrentValue"
                        @change="props.updateCurrentValue">
                    </sw-single-select>
                </template>
            </sw-inherit-wrapper>
        </template>
    </sw-card>
{% endblock %}
